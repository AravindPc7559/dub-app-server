FROM node:20-slim as base

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Conditionally install demucs based on ENABLE_DEMUCS environment variable
ARG ENABLE_DEMUCS=true
RUN if [ "$ENABLE_DEMUCS" = "true" ]; then \
        pip3 install demucs --break-system-packages; \
    fi

WORKDIR /app

COPY package*.json ./

RUN npm ci --only=production

COPY . .

CMD ["node", "worker.js"]